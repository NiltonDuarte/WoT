RangeMax = (velocity/(2*(-physicsGravity))) * (1 + sqrt((velocity)**2 + (16*(-physicsGravity))))

numeratorVelocityZ = (velocity**2)*sin(thetaAngle)*cos(thetaAngle) + physicsGravity*distanceModule
denominatorVelocityZ = velocity*cos(thetaAngle)
velocityZ = numeratorVelocityZ / denominatorVelocityZ
finalVelocity = sqrt((velocity * cos(thetaAngle))**2 + (velocityZ)**2)


damage = 0.8*finalVelocity*ProjectileMass

